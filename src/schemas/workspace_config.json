{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workspace Configuration",
  "type": "object",
  "properties": {
    "workspace": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "display_name": { "type": "string" },
        "description": { "type": "string" },
        "capacity_id": { "type": "string" },
        "git_repo": { "type": "string" },
        "git_branch": { "type": "string" },
        "git_directory": { "type": "string" }
      },
      "required": ["name", "capacity_id"]
    },
    "folders": {
      "type": "array",
      "items": { "type": "string" }
    },
    "lakehouses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "folder": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "warehouses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "folder": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "notebooks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "folder": { "type": "string" },
          "description": { "type": "string" },
          "file_path": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "pipelines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "folder": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "semantic_models": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "folder": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["name"]
      }
    },
    "principals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "role": { "type": "string" }
        },
        "required": ["id"]
      }
    },
    "resources": {
      "description": "Future-proof generic list for any Fabric item type (e.g., Eventstream, KQLDatabase, DataflowGen2)",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string", "description": "The Fabric item type (e.g. Eventstream, KQLDatabase)" },
          "name": { "type": "string" },
          "description": { "type": "string" }
        },
        "required": ["type", "name"]
      }
    }
  },
  "required": ["workspace"]
}
