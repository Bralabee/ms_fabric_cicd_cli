{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workspace Configuration",
  "type": "object",
  "properties": {
    "workspace": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "display_name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "domain": {
          "type": [
            "string",
            "null"
          ]
        },
        "capacity_id": {
          "type": "string"
        },
        "git_repo": {
          "type": "string"
        },
        "git_branch": {
          "type": "string"
        },
        "git_directory": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "capacity_id"
      ],
      "additionalProperties": false
    },
    "folders": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lakehouses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "folder": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "warehouses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "folder": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "notebooks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "folder": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "file_path": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "pipelines": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "folder": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "semantic_models": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "folder": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "name"
        ]
      }
    },
    "principals": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of this principal"
          }
        },
        "required": [
          "id"
        ]
      }
    },
    "resources": {
      "description": "Future-proof generic list for any Fabric item type (e.g., Eventstream, KQLDatabase, DataflowGen2)",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "The Fabric item type (e.g. Eventstream, KQLDatabase)",
            "examples": [
              "DataPipeline",
              "DataflowGen2",
              "Eventstream",
              "KQLDatabase",
              "KQLQueryset",
              "MLModel",
              "MLExperiment",
              "Reflex",
              "Report",
              "SparkJobDefinition"
            ]
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "folder": {
            "type": "string",
            "description": "Folder to place this resource in"
          }
        },
        "required": [
          "type",
          "name"
        ]
      }
    },
    "deployment_pipeline": {
      "description": "Fabric Deployment Pipeline configuration for stage promotion (Dev → Test → Prod)",
      "type": "object",
      "properties": {
        "pipeline_name": {
          "type": "string",
          "description": "Display name for the Deployment Pipeline"
        },
        "stages": {
          "type": "object",
          "description": "Mapping of stage names to stage configuration objects",
          "properties": {
            "development": {
              "type": "object",
              "properties": {
                "workspace_name": {
                  "type": "string"
                },
                "capacity_id": {
                  "type": "string"
                }
              },
              "required": [
                "workspace_name"
              ]
            },
            "test": {
              "type": "object",
              "properties": {
                "workspace_name": {
                  "type": "string"
                },
                "capacity_id": {
                  "type": "string"
                }
              },
              "required": [
                "workspace_name"
              ]
            },
            "production": {
              "type": "object",
              "properties": {
                "workspace_name": {
                  "type": "string"
                },
                "capacity_id": {
                  "type": "string"
                }
              },
              "required": [
                "workspace_name"
              ]
            }
          }
        }
      }
    }
  },
  "required": [
    "workspace"
  ],
  "additionalProperties": false
}